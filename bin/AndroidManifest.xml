<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="assist.reader"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Holo.Light.ButtonBar" >
        <activity
            android:name="assist.reader.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="assist.reader.PerformOCR"
            android:label="Converted Text"
            android:parentActivityName="ie.readassist.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ie.readassist.MainActivity" />
        </activity>
        <activity
            android:name="assist.reader.TranslateActivity"
            android:label="Translator" >
        </activity>
        <activity
            android:name="assist.reader.Editor"
            android:label="@string/title_activity_editor" >
        </activity>
        <activity
            android:name="assist.reader.Crop"
            android:label="@string/title_activity_crop" >
        </activity>
        <activity
            android:name="assist.reader.MongoActivity"
            android:label="@string/title_activity_mongo" >
        </activity>
        <activity
            android:name="assist.reader.History"
            android:label="@string/title_activity_history" >
        </activity>
    </application>

</manifest>
